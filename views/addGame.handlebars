<h1>Add New Game</h1>

<form action="/admin/games/new" method="POST" class="form-vertical">
    <label for="name">Game Name:</label>
    <input type="text" id="name" name="name" required>

    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre" required>

    <label>Platforms:</label>
    <div class="checkbox-group">
        <label><input type="checkbox" name="platforms" value="PC"> PC</label>
        <label><input type="checkbox" name="platforms" value="PlayStation"> PlayStation</label>
        <label><input type="checkbox" name="platforms" value="Xbox"> Xbox</label>
        <label><input type="checkbox" name="platforms" value="Mobile"> Mobile</label>
    </div>

    <h3>Characters</h3>
    <div id="characters-container">
        <div class="character-block">
            <label>Name:</label>
            <input type="text" name="characterNames" required>
            <label>Role:</label>
            <input type="text" name="characterRoles">
            <label>Image:</label>
            <input type="text" name="characterImages">
            <label>Description:</label>
            <textarea name="characterDescriptions" rows="3"></textarea>
        </div>
    </div>

    <button type="button" onclick="addCharacterBlock()">Add Another Character</button>
    <br><br>
    <button type="submit" class="btn btn-primary">Add Game</button>
    <a href="/admin" class="btn btn-secondary">Cancel</a>
</form>

<script>
    function addCharacterBlock() {
        const container = document.getElementById('characters-container');
        const block = document.createElement('div');
        block.className = 'character-block';
        block.innerHTML = `
            <label>Name:</label>
            <input type="text" name="characterNames" required>
            <label>Role:</label>
            <input type="text" name="characterRoles">
            <label>Image:</label>
            <input type="text" name="characterImages">
            <label>Description:</label>
            <textarea name="characterDescriptions" rows="3"></textarea>
            <hr>
        `;
        container.appendChild(block);
    }
</script>
