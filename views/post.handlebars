<div class="post-view">
    <a href="/threads/{{post.game}}/{{post.character}}" class="btn btn-secondary back-button">‚Üê Back to Threads</a>

    <div class="post-box">
        <h1>{{post.title}}</h1>
        <p><strong>By:</strong> {{post.username}} | {{post.timestamp}}</p>
        <p>{{post.body}}</p>

        {{#if post.tags.length}}
            <p><strong>Tags:</strong> 
                {{#each post.tags}}
                    <span class="tag">{{this}}</span> 
                {{/each}}
            </p>
        {{/if}}
    </div>

    <div class="comments-section">
        <h3>Comments</h3>

        {{#if post.comments.length}}
            <ul class="comment-list">
                {{#each post.comments}}
                    <li class="comment-box">
                        <strong>{{this.username}}</strong> <span class="comment-time">({{this.timestamp}})</span>
                        <p>{{this.comment}}</p>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p>No comments yet.</p>
        {{/if}}
    </div>

    <div class="reply-section">
        <h3>Leave a Reply</h3>
            <form method="POST" action="/posts/{{post._id}}/reply">
                <textarea name="comment" rows="4" required placeholder="Write your comment here..."></textarea>
                <button type="submit" class="btn btn-primary">Post Reply</button>
            </form>
    </div>
</div>
