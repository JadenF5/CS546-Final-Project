<h1>{{title}}</h1>

{{#if removedSuccess}}
    <p style="color: green; font-weight: bold;">Friend removed successfully!</p>
{{/if}}


{{#if showFriends}}
    {{#if friends.length}}
        <ul>
            {{#each friends}}
                <li>
                    {{this.username}}
                    <form method="POST" action="/friends/remove" style="display:inline;">
                        <input type="hidden" name="friendId" value="{{this._id}}">
                        <button type="submit">Remove</button>
                    </form>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No friends to show.</p>
    {{/if}}
    <a href="/friends/testform" class="dashboard-btn">Go to Friend Request Form</a>
    <a href="/dashboard" class="dashboard-btn">Return to Dashboard</a>

{{else}}
    <p>No users found to add as friends.</p>
{{/if}}
