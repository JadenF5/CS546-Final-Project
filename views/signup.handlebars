<h1>Sign Up</h1>
{{#if error}}
    <p style="color:red">{{error}}</p>
{{/if}}

<form method="POST" action="/signup">
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>

    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>

    <label for="confirmPassword">Confirm Password:</label>
    <input
        type="password"
        id="confirmPassword"
        name="confirmPassword"
        required
    >

    <label>Account Type:</label>
    <div class="radio-group">
        <label>
            <input type="radio" name="role" value="user" checked>
            User
        </label>
        <label>
            <input type="radio" name="role" value="admin">
            Admin
        </label>
    </div>

    <label>Favorite Game(s):</label>
    <div id="favoriteGames" class="checkbox-group">
        <label><input
                type="checkbox"
                name="favoriteGames"
                value="Marvel Rivals"
            >
            Marvel Rivals</label>
        <label><input
                type="checkbox"
                name="favoriteGames"
                value="Overwatch 2"
            >
            Overwatch 2</label>
        <label><input type="checkbox" name="favoriteGames" value="Valorant">
            Valorant</label>
        <label><input
                type="checkbox"
                name="favoriteGames"
                value="League of Legends"
            >
            League of Legends</label>
        <label><input
                type="checkbox"
                name="favoriteGames"
                value="Teamfight Tactics"
            >
            Teamfight Tactics</label>
    </div>

    <div id="charactersWrapper" style="display: none;">
        <label for="favoriteCharacters">Favorite Characters:</label>
        <select
            id="favoriteCharacters"
            name="favoriteCharacters"
            multiple
        ></select>
        <p><small>Hold Ctrl or Cmd to select multiple characters</small></p>
    </div>

    <button type="submit">Create Account</button>
</form>

<p><a href="/login">Already have an account? Log in</a></p>

<script>
    window.allGameCharacters =
    {{{json allGameCharacters}}}
</script>
<script src="/public/js/signup.js"></script>